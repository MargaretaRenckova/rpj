<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoONasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center|center_vertical"
                android:src="@drawable/logopanda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Kontakt"
                android:textColor="@color/purple_700"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="Natália Petrová &#38; Margaréta Renčková"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="kontakt@panda.sk"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="www.petapp.sk"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:padding="50dp"
                android:src="@drawable/appscreen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Verzia: 1.0"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Copyright © 2022"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>