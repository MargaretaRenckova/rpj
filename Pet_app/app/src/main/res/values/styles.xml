<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/orange</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/purple_700</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="molle">
        <item name="android:fontFamily">@font/molle_italic</item>
    </style>
    <style name="dancing">
        <item name="android:fontFamily">@font/dancing_script</item>
    </style>
    <style name="deltagothic">
        <item name="android:fontFamily">@font/delta_gothic</item>
    </style>
    <style name="covidnazov">
        <item name="android:fontFamily">@font/bauhhl</item>
    </style>
    <style name="montserrat_text">
        <item name="android:fontFamily">@font/montserrat_thin</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/wellgray</item>
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">#61211E</item>
    </style>
    <style name="Button.Color" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="ockovanie">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="popisOckovania">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/wellgray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

    <style name="beznePismo">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/wellgray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>
</resources>